<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <TextView
        android:layout_above="@id/txtCentralizado"
        android:layout_toLeftOf="@id/txtCentralizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        />

    <TextView
        android:layout_above="@id/txtCentralizado"
        android:layout_toRightOf="@id/txtCentralizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        />

    <TextView
        android:layout_below="@id/txtCentralizado"
        android:layout_toLeftOf="@id/txtCentralizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        />

    <TextView
        android:layout_below="@id/txtCentralizado"
        android:layout_toRightOf="@id/txtCentralizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        />

    <TextView
        android:id="@+id/txtCentralizado"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/centralizado"
        />

    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fechar"
        android:onClick="fechar"
        />


</RelativeLayout>